    if (categoryScores.length > 0) {
      categoryScores.sort((a, b) => b.score - a.score)
      return categoryScores[0].category.id
    }
    
    // ãƒãƒƒãƒã™ã‚‹ã‚‚ã®ãŒãªã„å ´åˆã¯ã€Œãã®ä»–ã€ã‚’è¿”ã™
