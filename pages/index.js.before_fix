  const detectCategoryFromText = (title = '', problem = '', kaizenContent = '') => {
    const combinedText = `${title} ${problem} ${kaizenContent}`.toLowerCase()
    
    // å„ã‚«ãƒ†ã‚´ãƒªã®ãƒãƒƒãƒã‚¹ã‚³ã‚¢ã‚’è¨ˆç®—
    const categoryScores = kaizenCategories.map(category => {
